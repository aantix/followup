<% if email.from_email == current_user.email %>
  <%= link_to "Follow Up", gmail_reply_link(email.message_id), target: "_blank", class: "btn #{local_variables[:btn_class] || "btn-primary"}" %>
<% else %>
  <%= link_to "Respond", gmail_reply_link(email.message_id), target: "_blank", class: "btn #{local_variables[:btn_class] || "btn-primary"}" %>
<% end %>