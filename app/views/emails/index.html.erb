<h1>Listing emails</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Thread</th>
      <th>Message</th>
      <th>From</th>
      <th>Body</th>
      <th>Received on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.user_id %></td>
        <td><%= email.thread_id %></td>
        <td><%= email.message_id %></td>
        <td><%= email.from %></td>
        <td><%= email.body %></td>
        <td><%= email.received_on %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path %>
