          </div>
          <!-- /slider-carousel -->

        </div>
        <!-- /span12 -->
      </div>
      <!-- /row -->
    </div>
    <!-- /container -->
  </section>


  <section id="features" class="features">
    <div class="container">
      <div class="row">

        <div class="col-sm-3">
          <div class="feature">
            <%= fa_icon "globe", base: "square" %>
            <h4>Important Email</h4>

            <p>
              You receive a ton of email.  We remind you only of the emails that require your personal
              touch.
            </p>
          </div>
        </div>
        <!-- /span3 -->

        <div class="col-sm-3">
          <div class="feature">
            <%= fa_icon "wrench", base: "square" %>
